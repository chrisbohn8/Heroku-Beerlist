<%= stylesheet_link_tag 'form', media: 'all' %>
<title>Beer Index</title>
<header>Beer Index</header>

<h2><%= link_to 'Add New Beer', new_beer_path %></h2>

<h2><%= link_to 'Beer List', beers_beerlist_path %></h2>

<h2 class="beer-selection-header">Beers On Tap</h2>
  <ol>
  <% @beers.each do |beer| %>
	<% if beer.ontap == true %>
   	   <li class="beer-name"><%= beer.name %>&thinsp; <%=  link_to 'Edit', edit_beer_path(beer) =%><br></li>
	<% end %>
  <% end %>
  </ol>

<h2>Beers Not On Tap</h2>
  <ul>
  <% @beers.each do |beer| %>
	<% if beer.ontap == false %>
       <li class="beer-name"><%= beer.name %><%=  link_to 'Edit', edit_beer_path(beer) =%></li>
	<% end %>
  <% end %>
  </ul>

